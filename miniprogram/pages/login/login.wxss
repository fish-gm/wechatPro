.container {
  height: 100vh;
  background: #f8f4ee;
  border-top: 2px solid #f8e087;
}
.register {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}

.img-box {
  /* position: absolute; */
  margin-bottom: 40rpx !important;
  width: 200rpx !important;
  height: 200rpx !important;
  border-radius: 100rpx;
  background: #eee;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto 20rpx;
  overflow: hidden;
}

.form-item {
  display: flex;
  height: 100rpx;
}

.form-item>text {
  width: 160rpx;

}
