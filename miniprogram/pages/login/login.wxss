.btn>button {
  background: #f8e087;
  width: 600rpx !important;
  height: 80rpx;
  border-radius: 40rpx;
}

.login-btn {
  left: 40rpx;
}

.register-btn {
  right: 40rpx;
}

.upload-img {
  height: 200rpx;
  margin: 60rpx auto;
  display: flex;
  justify-content: center;
}

.upload {
  position: relative;
  display: flex;
  justify-content: center;
  width: 100%;
}

.img-btn {
  position: absolute;
  background-color: transparent;
  box-sizing: border-box;
  border: 3px dashed #ddd;
  /* left: 50%; */
  width: 200rpx !important;
  /* margin-left: -100rpx; */
  height: 200rpx;
  line-height: 150rpx;
  border-radius: 100rpx;
  text-align: center;
  font-size: 120rpx;
  color: #ddd;
}

.pass-icon{
  width: 50rpx;
  text-align: center;
}